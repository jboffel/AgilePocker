extends layout

block content
  header#header
    .navbar.navbar-inverse(role='banner')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/')
            h1
              | Scrum Poker App
        .collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li.active
              a(href='/') Home
            li.dropdown
              a(href='#')
                | Pages
                i.fa.fa-angle-down
              ul.sub-menu(role='menu')
                li
                  a(href='/ScrumMaster') Scrum Master
                //li
                //  a(href='/stats') Stats
  // /#header
  section#clients
    .container
      .row
        .col-sm-12
          .clients.text-center.wow.fadeInUp(data-wow-duration='500ms', data-wow-delay='300ms')
            #identification(style='display: block')
              #identification-error(style='display: none')
              input(type='text', placeholder='Login', size='40', id='user-id')
              br
              input(type='text', placeholder='Email', size='40', id='user-mail')
              br
              input(type='button', value='Submit', onclick='identify()')
            #poker(style='display: none;')
              menu(id='controls', style='bottom: 45%; left: -2.5%; position: absolute; width: 100%;')
                input(type='text', value='', placeholder='Estimation', size='11', id='estimation')
                input(type='button', value='Send', onclick='sendEstimation()')
                input(type='button', value='Disconnect', onclick='appDisconnect()')
              canvas(id='canvas', width=1024, height=768, style='height: 80vh; width: 80vw; background:url(images/pokerTable.jpg); background-size: 100% 100%;').img-responsive
            h1.title Welcome
            p
              | This application's goal is to help to organize Scrum Poker to
              | estimate the complexity of your stories. Please input your
              | login and email (the email is never sent to the server, it is
              | only used to get your
              a(href='//gravatar.com')
                |  Gravatar
              |).
            p
              | Made by: Jeannie BOFFEL
